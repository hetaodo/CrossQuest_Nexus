<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nuclean.gamea"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Declare custom permission for secure broadcast -->
    <permission
        android:name="com.crossquest.nexus.permission.PROGRESS"
        android:protectionLevel="signature" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_gamea"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_gamea"
        android:supportsRtl="true"
        android:theme="@style/Theme.GameA">

        <!-- Main launcher activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Broadcast receiver to receive key from GameB -->
        <receiver
            android:name=".progress.ProgressReceiver"
            android:exported="true"
            android:permission="com.crossquest.nexus.permission.PROGRESS">
            <intent-filter>
                <action android:name="com.crossquest.nexus.ACTION_PROGRESS"/>
            </intent-filter>
        </receiver>

    </application>

</manifest>
